<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
        <div class="navbar-wagon-item">
            <ul class="nav nav-pills pull-left">
              <li>
                <%= link_to new_space_path, class: 'become_curator' do %>
                  <%= t(".profile", default: "Become a curator") %>
                <% end %>
              </li>
              <li>
                <%= link_to spaces_path, class: 'become_curator' do %>
                  <%= t(".profile", default: "Venues") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: 'become_curator' do %>
                  <%= t(".sign_out", default: "Log Out") %>
                <% end %>
              </li>
            </ul>
          </div>
          <%= link_to user_path(current_user) do %>
            <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
            <%= image_tag avatar_url, class: "avatar-large", id: "navbar-wagon-menu" %>
          <% end %>
        </div>
    <% else %>
        <div class="navbar-wagon-item">
            <ul class="nav nav-pills pull-left">
              <li>
                <%= link_to new_user_session_path, class: 'become_curator' do %>
                  <%= t(".profile", default: "Become a curator") %>
                <% end %>
              </li>
              <li>
                <%= link_to spaces_path, class: 'become_curator' do %>
                  <%= t(".profile", default: "Venues") %>
                <% end %>
              </li>
              <li>
                  <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: 'become_curator' %>
              </li>
            </ul>
          </div>
        </div>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Become a curator</a></li>
        <li><a href="#">Sign up</a></li>
        <li><a href="#">Help</a></li>
        <li><a href="#">My profile</a></li>
      </ul>
    </div>
  </div>
</div>
