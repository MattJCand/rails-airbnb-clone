<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Booking : <%= @space.name %></h2>
      <hr id="hrspecial">
      <%= simple_form_for [@space, @booking] do |f|%>
      <div class="form-inputs">
        <%= f.input :start_day %>
        <hr id="hrspecial">
        <%= f.input :duration, placeholder: 'Nb of days' %>
      </div>
      <div class="row">
        <div class="col-md-12 text-center">
        <hr id="hrspecial">
          <%= f.submit "book" ,class: "btn", id:"signup" %>
        </div>
      </div>
     <% end %>
    </div>
  </div>
</div>
